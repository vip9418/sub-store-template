{
  "dns": {
    "fakeip": {
      "enabled": true,
      "inet4_range": "198.18.0.0/15",
      "inet6_range": "fc00::/18"
    },
    "servers": [
      {
        "tag": "oversea-dns",
        "address": "tls://8.8.4.4",
        "detour": "proxy"
      },
      {
        "tag": "cn-dns",
        "address": "https://doh.pub/dns-query",
        "detour": "direct"
      },
      {
        "tag": "fakeip",
        "address": "fakeip"
      }
    ],
    "rules": [
      {
        "domain_suffix": ["cn"],
        "server": "cn-dns"
      },
      {
        "domain_keyword": ["gov.cn", "edu.cn"],
        "server": "cn-dns"
      },
      {
        "rule_set": "geosite-cn",
        "server": "cn-dns"
      },
      {
        "query_type": ["A", "AAAA"],
        "server": "fakeip"
      }
    ],
    "final": "oversea-dns",
    "independent_cache": true
  },
  "route": {
    "rules": [
      {
        "port": 53,
        "outbound": "dns-out"
      },
      {
        "ip_is_private": true,
        "outbound": "direct"
      },
      {
        "rule_set": "geoip-cn",
        "outbound": "direct"
      },
      {
        "rule_set": "geosite-cn",
        "outbound": "direct"
      },
      {
        "rule_set": "streaming",
        "outbound": "streaming"
      },
      {
        "rule_set": "work",
        "outbound": "work"
      },
      {
        "rule_set": "social",
        "outbound": "social"
      },
      {
        "rule_set": "geolocation-!cn",
        "outbound": "proxy"
      }
    ],
    "rule_set": [
      {
        "tag": "geoip-cn",
        "type": "remote",
        "format": "binary",
        "url": "https://fastly.jsdelivr.net/gh/MetaCubeX/meta-rules-dat@sing/geo/geoip/cn.srs",
        "download_detour": "direct"
      },
      {
        "tag": "geosite-cn",
        "type": "remote",
        "format": "binary",
        "url": "https://fastly.jsdelivr.net/gh/MetaCubeX/meta-rules-dat@sing/geo/geosite/cn.srs",
        "download_detour": "direct"
      },
      {
        "tag": "streaming",
        "type": "remote",
        "format": "binary",
        "url": "https://fastly.jsdelivr.net/gh/MetaCubeX/meta-rules-dat@sing/streaming.srs",
        "download_detour": "proxy"
      },
      {
        "tag": "work",
        "type": "remote",
        "format": "binary",
        "url": "https://fastly.jsdelivr.net/gh/MetaCubeX/meta-rules-dat@sing/work.srs",
        "download_detour": "proxy"
      },
      {
        "tag": "social",
        "type": "remote",
        "format": "binary",
        "url": "https://fastly.jsdelivr.net/gh/MetaCubeX/meta-rules-dat@sing/social.srs",
        "download_detour": "proxy"
      }
    ],
    "final": "proxy"
  }
}
